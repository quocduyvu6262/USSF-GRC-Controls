<h1>Manage Users</h1>

<%= form_with url: update_admin_status_path, method: :patch do %>
  <table class="user-table">
    <thead>
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Admin</th>
      </tr>
    </thead>

    <tbody>
      <% @display_users_admin_screen.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td>
            <%= check_box_tag 'admin_user_ids[]', user.id, user.admin? %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="submit-btn">
    <%= submit_tag 'Update Admin Status' %>
    <%= link_to 'Back', root_path, class: 'btn btn-secondary', style: 'margin-top: 10px;' %>
  </div>
  
<% end %>

<style>
  /* Table styling */
  .user-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }

  .user-table th,
  .user-table td {
    padding: 12px 15px;
    text-align: left;
  }

  .user-table th {
    background-color: #4CAF50;
    color: white;
    font-size: 16px;
  }

  .user-table tr:nth-child(even) {
    background-color: #f2f2f2;
  }

  .user-table tr:hover {
    background-color: #ddd;
  }

  /* Styling for the checkboxes */
  .user-table td input[type="checkbox"] {
    transform: scale(1.2);
    cursor: pointer;
  }

  /* Styling for the submit button */
  .submit-btn {
    margin-top: 20px;
    text-align: center;
  }

  .submit-btn input[type="submit"] {
    background-color: #4CAF50;
    color: white;
    font-size: 16px;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .submit-btn input[type="submit"]:hover {
    background-color: #45a049;
  }
</style>
