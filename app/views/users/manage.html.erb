<h1>Manage Users</h1>

<%= form_with url: update_admin_status_path, method: :patch do %>
  <table class="user-table">
    <thead>
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Admin</th>
        <th>Delete</th>
        <th>Block</th>
      </tr>
    </thead>

    <tbody>
      <% @display_users_admin_screen.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td>
            <%= check_box_tag 'admin_user_ids[]', user.id, user.admin? %>
          </td>
          <td class="centered">
              <%= button_to 'Delete', delete_user_path(user.id),
              method: :delete,
              data: {
                turbo_method: :delete,
                turbo_confirm: 'Are you sure you want to delete this user?'
               } %>
          </td>
          <td>
            <%= check_box_tag 'block_user_ids[]', user.id, user.block? %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div style="button-container">
    <%= submit_tag 'Update', class: 'index-page-button'%>
    <%= link_to 'Back', root_path, class: 'index-page-button' %>
    </div>
  
<% end %>

<style>
  :root {
    font-size: 1.6rem;
  }

  .user-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 2rem;
  }

  .user-table th,
  .user-table td {
    padding: 1rem 1.2rem;
    text-align: left;
  }

  .user-table th {
    background-color: black;
    color: white;
    font-size: 1rem;
  }

  .user-table tr:nth-child(even) {
    background-color: #f2f2f2;
  }

  .user-table tr:hover {
    background-color: #ddd;
  }

  .user-table td input[type="checkbox"] {
    transform: scale(1.5);
    cursor: pointer;
  }



  .user-table td.centered {
    display: flex;
    justify-content: center;
    align-items: center;
  }




  @media (max-width: 76.8rem) {
    .user-table th, .user-table td {
      font-size: 0.875rem;
      padding: 0.8rem;
    }


    .user-table td input[type="checkbox"] {
      transform: scale(1.3);
    }
  }
</style>
